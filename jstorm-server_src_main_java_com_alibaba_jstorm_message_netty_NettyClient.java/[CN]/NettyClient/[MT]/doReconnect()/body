{
  if (channelRef.get() != null) {
    return;
  }
  if (isClosed() == true) {
    return;
  }
  long sleepMs=getSleepTimeMs();
  LOG.info("Reconnect ... [{}], {}, sleep {}ms",retries.get(),remote_addr,sleepMs);
  ChannelFuture future=bootstrap.connect(remote_addr);
  future.addListener(new ChannelFutureListener(){
    public void operationComplete(    ChannelFuture future) throws Exception {
      if (future.isSuccess()) {
      }
 else {
        LOG.info("Failed to reconnect ... [{}], {}",retries.get(),remote_addr);
        reconnect();
      }
    }
  }
);
  JStormUtils.sleepMs(sleepMs);
  return;
}
