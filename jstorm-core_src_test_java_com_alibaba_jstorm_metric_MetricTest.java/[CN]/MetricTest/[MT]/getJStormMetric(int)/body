{
  Metric metric=null;
  if (type == 0) {
    metric=JStormMetrics.registerWorkerCounter("Counter");
  }
 else   if (type == 1) {
    metric=JStormMetrics.registerWorkerMeter("Meter");
  }
 else   if (type == 2) {
    metric=JStormMetrics.registerWorkerHistogram("Historgram");
  }
 else {
    return null;
  }
  metric.setWindowSeconds(windows);
  metric.init();
  return metric;
}
