{
  if (isClosed()) {
    LOG.warn("Client is being closed, and does not take requests any more");
    return;
  }
  long start=System.nanoTime();
  try {
    pushBatch(messages);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
 finally {
    long end=System.nanoTime();
    if (sendTimer != null) {
      sendTimer.update((end - start) / TimeUtils.NS_PER_US);
    }
  }
}
