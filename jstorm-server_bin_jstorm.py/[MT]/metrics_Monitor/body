def metrics_Monitor(*args):
    'Syntax: [jstorm metricsMonitor topologyname bool]\n    Enable or disable the metrics monitor of one topology.\n    '
    childopts = (' -Dstorm.root.logger=INFO,stdout -Dlog4j.configuration=File:%s/conf/aloha_log4j.properties' % JSTORM_DIR)
    exec_storm_class('backtype.storm.command.metrics_monitor', args=args, jvmtype='-client -Xms256m -Xmx256m', extrajars=[CONF_DIR, (JSTORM_DIR + '/bin'), LOG4J_CONF], childopts=childopts)
