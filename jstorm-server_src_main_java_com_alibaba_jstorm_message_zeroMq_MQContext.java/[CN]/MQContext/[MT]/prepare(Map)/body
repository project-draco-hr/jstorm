{
  this.storm_conf=storm_conf;
  int zmqThreads=JStormUtils.parseInt(storm_conf.get(Config.ZMQ_THREADS));
  linger_ms=JStormUtils.parseInt(storm_conf.get(Config.ZMQ_LINGER_MILLIS));
  ipc=StormConfig.cluster_mode(storm_conf).equals("local");
  virtportZmq=JStormUtils.parseBoolean(storm_conf.get(Config.STORM_LOCAL_MODE_ZMQ),false);
  maxQueueMsg=JStormUtils.parseInt(storm_conf.get(Config.ZMQ_HWM),ConfigExtension.DEFAULT_ZMQ_MAX_QUEUE_MSG);
  context=ZeroMq.context(zmqThreads);
  LOG.info("MQContext prepare done...");
}
