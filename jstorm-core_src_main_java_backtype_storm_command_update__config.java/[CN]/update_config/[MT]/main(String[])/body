{
  if (args == null || args.length < 2) {
    throw new InvalidParameterException("[USAGE] update_config topologyName config");
  }
  String topologyName=args[0];
  NimbusClient client=null;
  try {
    Map conf=Utils.readStormConfig();
    client=NimbusClient.getConfiguredClient(conf);
    Map loadConf=Utils.loadConf(args[1]);
    String jsonConf=Utils.to_json(loadConf);
    System.out.println("New configuration:\n" + jsonConf);
    client.getClient().updateConf(topologyName,jsonConf);
    System.out.println("Successfully submit command update_conf " + topologyName);
  }
 catch (  Exception e) {
    System.out.println(e.getMessage());
    e.printStackTrace();
    throw new RuntimeException(e);
  }
 finally {
    if (client != null) {
      client.close();
    }
  }
}
