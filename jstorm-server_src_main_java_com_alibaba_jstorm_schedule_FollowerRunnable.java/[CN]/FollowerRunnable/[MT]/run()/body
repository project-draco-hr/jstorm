{
  LOG.info("Follower Thread starts!");
  while (state) {
    try {
      Thread.sleep(sleepTime);
      if (data.isLeader()) {
        data.getStormClusterState().unregister_nimbus_host(nimbusHost);
        return;
      }
      if (!data.getStormClusterState().leader_existed()) {
        this.tryToBeLeader(data.getConf());
        continue;
      }
      check();
      data.getStormClusterState().update_follower_hb(nimbusHost,data.uptime());
    }
 catch (    InterruptedException e) {
      continue;
    }
catch (    Exception e) {
      if (state) {
        LOG.error("Unknow exception ",e);
      }
    }
  }
  LOG.info("Follower Thread has closed!");
}
