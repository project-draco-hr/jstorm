{
  ResourceAssignment oldAssignment=getOldAlloc(task,defaultContext,componentMap,componentName);
  if (oldAssignment == null) {
    return null;
  }
  boolean resourceValid=AssignTaskUtils.checkResourceValid(oldAssignment,task,defaultContext,componentMap,componentName,canUsedSupervisorIds,alreadyAssign);
  if (resourceValid == false) {
    return null;
  }
  LOG.info(componentName + " of " + task+ " use old assignment "+ oldAssignment);
  AssignTaskUtils.allocResource(defaultContext,oldAssignment);
  return oldAssignment;
}
