{
  boolean needReset=true;
  Logger rootLogger=Logger.getRootLogger();
  if (rootLogger != null) {
    Enumeration appenders=rootLogger.getAllAppenders();
    if (appenders.hasMoreElements() == true) {
      needReset=false;
    }
  }
  if (needReset == true) {
    BasicConfigurator.configure();
    rootLogger.setLevel(Level.INFO);
  }
}
